<Window x:Class="V9_ExternalRemote.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="V9 Master Hub Remote" 
        Height="450" Width="300"
        WindowStyle="None" 
        AllowsTransparency="True" 
        Background="Transparent"
        Topmost="True"
        BorderThickness="1"
        BorderBrush="#44FFFFFF">
    
    <Window.Resources>
        <Style x:Key="GlassButton" TargetType="Button">
            <Setter Property="Background" Value="#22FFFFFF"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#44FFFFFF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border CornerRadius="12" Background="#DD101015" Padding="15">
        <Border.Effect>
            <DropShadowEffect BlurRadius="15" Opacity="0.5" ShadowDepth="2"/>
        </Border.Effect>
        
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/> <!-- Title Bar -->
                <RowDefinition Height="Auto"/> <!-- System Status -->
                <RowDefinition Height="*"/>    <!-- Main Controls -->
                <RowDefinition Height="Auto"/> <!-- Footer Info -->
            </Grid.RowDefinitions>

            <!-- Title Bar & Symbol Selection -->
            <Grid Grid.Row="0" MouseDown="TitleBar_MouseDown" Background="Transparent">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" Text="V9 MASTER" Foreground="Cyan" FontSize="9" FontWeight="Bold" VerticalAlignment="Center" Margin="0,0,10,0"/>
                
                <Grid Grid.Column="1" Margin="10,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Input & Add -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="0,0,5,0">
                        <TextBox x:Name="SymbolInput" Text="MES" Width="35" Background="#11FFFFFF" Foreground="White" BorderThickness="0" TextAlignment="Center" FontSize="10" VerticalAlignment="Center" KeyDown="SymbolInput_KeyDown"/>
                        <Button Content="+" Click="SetSymbol_Click" FontSize="10" Margin="2,0" Padding="4,0" Style="{StaticResource GlassButton}" ToolTip="Add Symbol"/>
                    </StackPanel>

                    <!-- Watchlist Tabs -->
                    <ScrollViewer Grid.Column="1" HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="Disabled" PanningMode="HorizontalOnly">
                        <StackPanel x:Name="WatchlistPanel" Orientation="Horizontal"/>
                    </ScrollViewer>
                </Grid>

                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <Button Content="î„ˆ" FontFamily="Segoe MDL2 Assets" Background="Transparent" Foreground="#66FFFFFF" BorderThickness="0" Click="Close_Click" Margin="5,0"/>
                </StackPanel>
            </Grid>

            <!-- Status Indicators -->
            <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,15,0,20">
                <Border Width="8" Height="8" CornerRadius="4" Background="#FF00FF00" Margin="0,0,5,0" x:Name="HubStatusLed"/>
                <TextBlock Text="HUB CONNECTED" Foreground="#AAFFFFFF" FontSize="9" VerticalAlignment="Center" Margin="0,0,15,0"/>
                
                <Border Width="8" Height="8" CornerRadius="4" Background="#FFFFFF00" Margin="0,0,5,0" x:Name="TosStatusLed"/>
                <TextBlock Text="TOS RTD: OK" Foreground="#AAFFFFFF" FontSize="9" VerticalAlignment="Center"/>
            </StackPanel>

            <!-- Interactive Flags & Data (Concept 53/55) -->
            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="60"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" VerticalAlignment="Stretch">
                    <!-- TOS Live Data Display -->
                    <Grid Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="LAST" Foreground="#66FFFFFF" FontSize="8"/>
                            <TextBlock x:Name="LastPriceTxt" Text="0.00" Foreground="White" FontSize="24" FontWeight="Bold"/>
                        </StackPanel>
                        <StackPanel Grid.Column="1" HorizontalAlignment="Right">
                            <TextBlock Text="9/15 EMA" Foreground="#66FFFFFF" FontSize="8" HorizontalAlignment="Right"/>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock x:Name="Ema9Txt" Text="0.0" Foreground="#8800FF00" FontSize="14" Margin="0,0,5,0"/>
                                <TextBlock x:Name="Ema15Txt" Text="0.0" Foreground="#88FF6600" FontSize="14"/>
                            </StackPanel>
                        </StackPanel>
                    </Grid>

                    <Grid Margin="0,0,0,15">
                        <StackPanel>
                            <TextBlock Text="OR RANGE" Foreground="#66FFFFFF" FontSize="8"/>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock x:Name="OrHighTxt" Text="0.00" Foreground="Lime" FontSize="14" FontWeight="Bold"/>
                                <TextBlock Text=" : " Foreground="#22FFFFFF" FontSize="14"/>
                                <TextBlock x:Name="OrLowTxt" Text="0.00" Foreground="Red" FontSize="14" FontWeight="Bold"/>
                            </StackPanel>
                        </StackPanel>
                    </Grid>

                    <Button Style="{StaticResource GlassButton}" Content="LONG" Background="#2200FF00" FontSize="16" FontWeight="Bold" Height="50" Click="Long_Click" Margin="0,0,0,8"/>
                    <Button Style="{StaticResource GlassButton}" Content="SHORT" Background="#22FF0000" FontSize="16" FontWeight="Bold" Height="50" Click="Short_Click" Margin="0,0,0,8"/>
                    <Button Style="{StaticResource GlassButton}" Content="FLATTEN" Background="#22FFFFFF" Margin="0,8,0,0" Height="30" Click="Flatten_Click"/>
                </StackPanel>

                <!-- MTF Flags (Concept 55) -->
                <StackPanel Grid.Column="1" Margin="10,0,0,0">
                    <TextBlock Text="MTF FLAGS" Foreground="#22FFFFFF" FontSize="7" HorizontalAlignment="Center" Margin="0,0,0,5"/>
                    <Border x:Name="Flag5m" Background="#11FFFFFF" Height="30" CornerRadius="4" Margin="0,0,0,5">
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="5M" Foreground="#44FFFFFF" FontSize="7" HorizontalAlignment="Center"/>
                            <TextBlock x:Name="Flag5mVal" Text="---" Foreground="White" FontSize="10" HorizontalAlignment="Center" FontWeight="Bold"/>
                        </StackPanel>
                    </Border>
                    <Border x:Name="Flag15m" Background="#11FFFFFF" Height="30" CornerRadius="4" Margin="0,0,0,5">
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="15M" Foreground="#44FFFFFF" FontSize="7" HorizontalAlignment="Center"/>
                            <TextBlock x:Name="Flag15mVal" Text="---" Foreground="White" FontSize="10" HorizontalAlignment="Center" FontWeight="Bold"/>
                        </StackPanel>
                    </Border>
                    <Border x:Name="Flag60m" Background="#11FFFFFF" Height="30" CornerRadius="4" Margin="0,0,0,5">
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="1H" Foreground="#44FFFFFF" FontSize="7" HorizontalAlignment="Center"/>
                            <TextBlock x:Name="Flag60mVal" Text="---" Foreground="White" FontSize="10" HorizontalAlignment="Center" FontWeight="Bold"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>

            <!-- Signal Border Glow (Concept 54) -->
            <Border Grid.RowSpan="4" x:Name="GlowBorder" BorderThickness="2" BorderBrush="Transparent" CornerRadius="12" IsHitTestVisible="False"/>

            <!-- Footer / Mode Toggle -->
            <Grid Grid.Row="3" Margin="0,10,0,0">
                <CheckBox x:Name="GhostModeCheck" Content="GHOST OVERLAY" Foreground="#66FFFFFF" FontSize="10" Checked="GhostMode_Changed" Unchecked="GhostMode_Changed"/>
                <TextBlock Text="v9.1.0" Foreground="#44FFFFFF" FontSize="9" HorizontalAlignment="Right" VerticalAlignment="Bottom"/>
            </Grid>
        </Grid>
    </Border>
</Window>
